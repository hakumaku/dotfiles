[user]
    email = gentlebuuny@gmail.com
    name = haku
[includeIf "gitdir:~/workspace/gitlab/"]
    path = ~/.config/git/gitlab/config
[core]
    editor = nvim
    pager = delta
[push]
    autoSetupRemote = true
[pull]
    rebase = true
[rebase]
    autoStash = true
[commit]
    verbose = true
[interactive]
    diffFilter = delta --color-only
[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
    inspect-raw-lines = false
    navigate = true  # use n and N to move between diff sections
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[merge]
    tool = fugitive
    # git-delta
    conflictstyle = diff3
[mergetool "fugitive"]
    cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[alias]
    fzf = !zsh -c 'source $XDG_CONFIG_HOME/zsh/.zshrc && _fzf_commit'
    view = !zsh -c 'source $XDG_CONFIG_HOME/zsh/.zshrc && _fzf_commit_wo_view'
[diff]
    # git-delta
    colorMoved = default
[safe]
	directory = /opt/fluttera
	directory = /opt/flutter
